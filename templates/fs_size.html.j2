{% for row in data %}
<tr>
<td style="padding:12px 8px; border-bottom:1px solid #e2e8f0; background-color:#ffffff; font-size:12px; color:#4a5568;">
<strong style="color:#2d3748;">{{ row[0] }}</strong>
</td>
<td style="padding:12px 8px; border-bottom:1px solid #e2e8f0; background-color:#ffffff; font-size:12px; text-align:right; color:#2d3748;">
<strong>{{ row[1]|round }}</strong> GB
</td>
<td style="padding:12px 8px; border-bottom:1px solid #e2e8f0; background-color:#ffffff; font-size:12px; text-align:right; color:#4a5568;">
{{ row[2]|round }} GB
</td>
<td style="padding:12px 8px; border-bottom:1px solid #e2e8f0; background-color:#ffffff; font-size:12px; text-align:right; color:#4a5568;">
{{ row[3]|round }} GB
</td>
<td style="padding:12px 8px; border-bottom:1px solid #e2e8f0; background-color:#ffffff; font-size:12px; text-align:center;">
{% if row[4]|round|int < threshold|int %}
<span style="display:inline-block; background-color:#e53e3e; color:#ffffff; padding:4px 8px; border-radius:3px; font-weight:700;">{{ row[4]|round }}%</span>
{% else %}
<span style="display:inline-block; background-color:#48bb78; color:#ffffff; padding:4px 8px; border-radius:3px; font-weight:700;">{{ row[4]|round }}%</span>
{% endif %}
</td>
</tr>
{% endfor %}