{% for row in data %}
<tr>
{%if loop.first %}<td style="padding:6px 8px; border-bottom:1px solid #e2e8f0; background-color:#ffffff; font-size:12px; text-align:right; color:#2d3748;" rowspan="{{ data|length }}">
{{ row[0] }}
</td>{% endif %}
<td style="padding:6px 8px; border-bottom:1px solid #e2e8f0; background-color:#ffffff; font-size:12px; color:#4a5568;">
<img src="cid:hddicon" align="bottom" alt="-">&nbsp; <strong style="color:#2d3748;">{{ row[1] }}</strong>
</td>
<td style="padding:6px 8px; border-bottom:1px solid #e2e8f0; background-color:#ffffff; font-size:12px; text-align:right; color:#2d3748;">
<strong>{{ row[2]|format_storage }}</strong>
</td>
<td style="padding:6px 8px; border-bottom:1px solid #e2e8f0; background-color:#ffffff; font-size:12px; text-align:right; color:#4a5568;">
{{ row[3]|format_storage }}
</td>
<td style="padding:6px 8px; border-bottom:1px solid #e2e8f0; background-color:#ffffff; font-size:12px; text-align:right; color:#4a5568;">
{{ row[4]|format_storage }}
</td>
<td style="padding:6px 8px; border-bottom:1px solid #e2e8f0; background-color:#ffffff; font-size:12px; text-align:right;">
{% if row[5]|round|int < threshold|int %}
<span style="display:inline-block; background-color:#e53e3e; color:#ffffff; padding:4px 8px; font-weight:700;">{{ row[5]|round }}%</span>
{% else %}
<span style="display:inline-block; background-color:#48bb78; color:#ffffff; padding:4px 8px; font-weight:700;">{{ row[5]|round }}%</span>
{% endif %}
</td>
</tr>
{% endfor %}