<!-- Database Summary Card -->
<td style="padding:6px; width:50%; vertical-align:top;">
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="border:1px solid #cbd5e0; background-color:#f9fafb;">
<tr>
<td style="padding:12px;">
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
<tr>
<td colspan="2" style="padding-bottom:10px; border-bottom:1px solid #cbd5e0;">
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
<tr>
<td style="vertical-align:middle; padding:0;">
<img src="cid:2" alt="Database" style="display:inline-block; width:20px; height:20px; margin-right:8px; border:0;">&nbsp;
<span style="font-weight:700; color:#2d3748; font-size:16px;">{{ dbname|upper }}</span>
{% if version %}<span style="color:#718096; font-size:11px; margin-left:8px;">App: v{{ version }}</span>{% endif %}
</td>
</tr>
<tr>
<td style="padding-top:4px;">
<span style="color:#718096; font-size:11px;">DBID: <strong>{{ dbid }}</strong>{% if db_version %} | DB: <strong>{{ db_version }}</strong>{% endif %}</span>
</td>
</tr>
</table>
</td>
</tr>
<tr>
<td style="padding:10px 0 0 0; width:50%; vertical-align:top;">
<span style="display:block; font-size:11px; color:#718096; margin-bottom:4px;">Wielkość bazy</span>
<span style="display:block; font-size:20px; font-weight:700; color:#2d3748;">{{ size|format_storage }}</span>
</td>
<td style="padding:10px 0 0 0; width:50%; vertical-align:top;">
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
<tr>
<td style="text-align:right; padding-bottom:{% if dg_status %}10px{% else %}0{% endif %};">
<span style="display:block; font-size:11px; color:#718096; margin-bottom:4px;">Status kopii</span>
{% if alert %}
<span style="display:inline-block; background-color:#e53e3e; color:#ffffff; padding:4px 10px; font-size:12px; font-weight:600;">BŁĄD</span>
{% else %}
<span style="display:inline-block; background-color:#48bb78; color:#ffffff; padding:4px 10px; font-size:12px; font-weight:600;">OK</span>
{% endif %}
</td>
</tr>
{% if dg_status %}
<tr>
<td style="text-align:right;">
<span style="display:block; font-size:11px; color:#718096; margin-bottom:4px;">Status DataGuard</span>
{% if dg_status == "SUCCESS" %}
<span style="display:inline-block; background-color:#48bb78; color:#ffffff; padding:4px 10px; font-size:12px; font-weight:600;">OK</span>
{% elif dg_status == "ERROR" %}
<span style="display:inline-block; background-color:#e53e3e; color:#ffffff; padding:4px 10px; font-size:12px; font-weight:600;">BŁĄD</span>
{% else %}
<span style="display:inline-block; background-color:#f6ad55; color:#ffffff; padding:4px 10px; font-size:12px; font-weight:600;">DO SPRAWDZENIA</span>
{% endif %}
</td>
</tr>
{% endif %}
</table>
</td>
</tr>
<tr>
<td colspan="2" style="padding-top:12px; border-top:1px solid #e2e8f0; margin-top:12px; text-align:center;">
<a href="#{{ dbname|upper }}" style="color:#0066cc; text-decoration:none; font-size:12px; font-weight:600;">Szczegółowe raporty →</a>
</td>
</tr>
</table>
</td>
</tr>
</table>
</td>